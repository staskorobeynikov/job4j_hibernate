<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:mem:market;sql.enforce_size=false</property>
        <property name="connection.username">test</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="carbuyer.models.Advert"/>
        <mapping class="carbuyer.models.Account"/>
        <mapping class="carbuyer.models.Car"/>
        <mapping class="carbuyer.models.Engine"/>
        <mapping class="carbuyer.models.Transmission"/>
        <mapping class="carbuyer.models.Model"/>
        <mapping class="carbuyer.models.CarBody"/>
        <mapping class="carbuyer.models.User"/>
        <mapping class="carbuyer.models.Mark"/>
    </session-factory>
</hibernate-configuration>