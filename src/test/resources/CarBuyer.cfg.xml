<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:market;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"/>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="connection.pool_size">1</property>
        <property name="use_identifier_rollback">true</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping resource="carbuyer/models/Engine.hbm.xml"/>
        <mapping resource="carbuyer/models/CarBody.hbm.xml"/>
        <mapping resource="carbuyer/models/Transmission.hbm.xml"/>
        <mapping resource="carbuyer/models/Account.hbm.xml"/>
        <mapping resource="carbuyer/models/Car.hbm.xml"/>
        <mapping resource="carbuyer/models/Mark.hbm.xml"/>
        <mapping resource="carbuyer/models/Model.hbm.xml"/>
        <mapping resource="carbuyer/models/User.hbm.xml"/>
        <mapping resource="carbuyer/models/Advert.hbm.xml"/>
    </session-factory>
</hibernate-configuration>