<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <servlet>
        <servlet-name>ShowAllAdvertsServlet</servlet-name>
        <servlet-class>carbuyer.servlets.ShowAllAdvertsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAllAdvertsServlet</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>carbuyer.servlets.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowUserAdvertsServlet</servlet-name>
        <servlet-class>carbuyer.servlets.ShowUserAdvertsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUserAdvertsServlet</servlet-name>
        <url-pattern>/adverts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <servlet-class>carbuyer.servlets.UpdateStatusServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>carbuyer.servlets.DownloadServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddNewAdvertServlet</servlet-name>
        <servlet-class>carbuyer.servlets.AddNewAdvertServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewAdvertServlet</servlet-name>
        <url-pattern>/addAdvert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddNewUserServlet</servlet-name>
        <servlet-class>carbuyer.servlets.AddNewUserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarShowDetailsServlet</servlet-name>
        <servlet-class>carbuyer.servlets.CarShowDetailsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarShowDetailsServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowLastDayAdvertsServlet</servlet-name>
        <servlet-class>carbuyer.servlets.ShowLastDayAdvertsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowLastDayAdvertsServlet</servlet-name>
        <url-pattern>/lastday</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowAdvertsWithPhotoServlet</servlet-name>
        <servlet-class>carbuyer.servlets.ShowAdvertsWithPhotoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAdvertsWithPhotoServlet</servlet-name>
        <url-pattern>/withphoto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowAdvertsSpecificMarkServlet</servlet-name>
        <servlet-class>carbuyer.servlets.ShowAdvertsSpecificMarkServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAdvertsSpecificMarkServlet</servlet-name>
        <url-pattern>/marks</url-pattern>
    </servlet-mapping>

</web-app>