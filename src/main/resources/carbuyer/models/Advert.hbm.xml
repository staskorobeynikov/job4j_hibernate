<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="carbuyer.models.Advert" table="adverts">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="createdDate" column="created_date"/>
        <property name="imageName" column="image_name"/>
        <property name="price" column="price"/>
        <property name="status" column="status"/>
        <many-to-one name="owner" class="carbuyer.models.User" column="owner_id" lazy="false"/>
        <many-to-one name="car" class="carbuyer.models.Car" column="car_id" lazy="false"/>
    </class>
</hibernate-mapping>